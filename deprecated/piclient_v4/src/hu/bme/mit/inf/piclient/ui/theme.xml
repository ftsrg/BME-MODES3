<?xml version="1.0" encoding="UTF-8"?>
<synth>
    <style id="default">
        <font name="Times New Roman" size="14"/>
        <state>
            <!--<color value="#000036" type="BACKGROUND"/>-->
            <color value="#FFFFFF" type="BACKGROUND"/>
            <color value="#000000" type="FOREGROUND"/>
        </state>
    </style>
    
    <style id="buttonsStyle">
        <font name="BankGothic Lt BT" size="18"/>
        
        <!-- margin -->
        <insets top="6" left="6" right="6" bottom="6"/>
        
        <state>
            <color value="#000036" type="BACKGROUND"/>
            <color value="#333333" type="FOREGROUND"/>
        </state>
        
        <state value="MOUSE_OVER">
            <color value="#FF0000" type="BACKGROUND"/>
        </state>
    </style>
    
    <style id="textField">
       
        
        <state>
            <color value="#FFFFFF" type="BACKGROUND"/>
            <color value="#333333" type="FOREGROUND"/>
        </state>
    </style>
    
    <!-- default style for every element -->
    <!--<bind style="default" type="region" key=".*"/>-->
    
    <!-- every button setted as blue-white button -->
    <bind style="buttonsStyle" type="region" key="Button"/>
    
    <bind style="textField" type="region" key="TextField"/>
    
    
</synth>